!!! 5
%html
  %head
    %meta{:charset => "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    / Use title if it's in the page YAML frontmatter
    %title= data.page.title || "The Middleman"
    = stylesheet_link_tag "application"
    %script{ :src => "http://www.parsecdn.com/js/parse-1.2.7.min.js" }
    %script{ :src => "https://maps.googleapis.com/maps/api/js?key=AIzaSyD8RZi7wQ3lMJYkS247UNKtVigdGI5Z6qY&sensor=true" }
    = javascript_include_tag  "manifest"
  %body{:class => page_classes}
    = yield
    = render :partial, '_templates'
    :javascript
      if (App.environment=='production')
        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
